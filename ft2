
function sleep(ms) {
 return new Promise(resolve => setTimeout(resolve, ms));
}

function fas(){
	var btn = document.createElement("button");
	btn.innerHTML = "1";
	btn.id = "btn";
	btn.style = "text-align: center;color: green;height: 30px;";
	btn.onclick = function()
    {
      if (btn.innerHTML == "1") {
        btn.innerHTML = "0"   ;
      } else {
        btn.innerHTML = "1";
      };sas();
    };
	document.body.insertBefore(btn, document.body.firstChild);
}
fas();




async  function sas(){
var items = document.querySelector('button#btn');
	for(var es = 1; items.textContent < es;){
		ara();
 		await sleep(1000)
 	}
}
sas();


